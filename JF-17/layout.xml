<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<grid>												<!--numpad-->
		<row>
			<button text="1 PFL"  ondown="num1"/>
			<button text="2 VRC"  ondown="num2"/>
			<button text="3"      ondown="num3"/>
		</row>
		<row>
			<button text="4 DST"  ondown="num4"/>
			<button text="5 TOT"  ondown="num5"/>
			<button text="6 TOD"  ondown="num6"/>
		</row>
		<row>
			<button text="7 FUL"  ondown="num7"/>
			<button text="8 IFF"  ondown="num8"/>
			<button text="9"      ondown="num9"/>
		</row>
		<row>
			<button text="RTN"  ondown="funRTN"/>
			<button text="0"    ondown="num0"/>
			<button text=""     ondown=""/>
		</row>
	</grid>
	<grid>												<!--Options-->
		<row>
			<button text="→"  ondown="funL1"/>
			<button text="←"  ondown="funR1"/>
		</row>
		<row>
			<button text="→"  ondown="funL2"/>
			<button text="←"  ondown="funR2"/>
		</row>
		<row>
			<button text="→"  ondown="funL3"/>
			<button text="←"  ondown="funR3"/>
		</row>
		<row>
			<button text="→"  ondown="funL4"/>
			<button text="←"  ondown="funR4"/>
		</row>
	</grid>
	<grid>												<!--Function-->
		<row>
			<button text="OAP"  ondown="funOAP"/>
			<button text="MRK"  ondown="funMRK"/>
		</row>
		<row>
			<button text="P.U"   ondown="funPU"/>
			<button text="HNS"  ondown="funHNS"/>
		</row>
		<row>
			<button text="A/P"  ondown="funAP"/>
			<button text="FPM"  ondown="funFPM"/>
		</row>
		<row>
			<button text="+"  ondown="funPlus"/>
			<button text="-"  ondown="funMinus"/>
		</row>
	</grid>
</layout>
